rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Monitors collection (CronGuard)
    match /monitors/{monitorId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);

      // Incidents subcollection
      match /incidents/{incidentId} {
        allow read: if isOwner(get(/databases/$(database)/documents/monitors/$(monitorId)).data.userId);
        allow write: if false; // Only server can write incidents
      }

      // Alert channels subcollection
      match /channels/{channelId} {
        allow read: if isOwner(get(/databases/$(database)/documents/monitors/$(monitorId)).data.userId);
        allow create, update, delete: if isOwner(get(/databases/$(database)/documents/monitors/$(monitorId)).data.userId);
      }

      // Pings subcollection (for tracking ping history)
      match /pings/{pingId} {
        allow read: if isOwner(get(/databases/$(database)/documents/monitors/$(monitorId)).data.userId);
        allow write: if false; // Only server can write pings
      }
    }
    
    // Forms collection (FormVault)
    match /forms/{formId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
      
      // Access links subcollection
      match /accessLinks/{linkId} {
        allow read: if isOwner(get(/databases/$(database)/documents/forms/$(formId)).data.userId);
        allow create: if isOwner(get(/databases/$(database)/documents/forms/$(formId)).data.userId);
        allow update, delete: if isOwner(get(/databases/$(database)/documents/forms/$(formId)).data.userId);
      }
      
      // Submissions subcollection
      match /submissions/{submissionId} {
        allow read: if isOwner(get(/databases/$(database)/documents/forms/$(formId)).data.userId);
        allow write: if false; // Only server can write submissions
      }
    }
    
    // API Keys collection (SnipShot)
    match /apiKeys/{keyId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Screenshots collection (SnipShot) - read-only for users
    match /screenshots/{screenshotId} {
      allow read: if true; // Public read for cached screenshots
      allow write: if false; // Only server can write
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

